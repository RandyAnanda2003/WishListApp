<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@drawable/card_background"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvPlanTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plan Title"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvPlanDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plan Date"
        android:textSize="14sp"
        android:textColor="#757575"
        android:layout_below="@id/tvPlanTitle"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dp"
        android:layout_alignParentEnd="true"/>

    <Button
        android:id="@+id/btnEditPlan"
        android:layout_width="50dp"
        android:layout_height="27dp"
        android:background="@drawable/btn_edit"
        android:text="EDIT"
        android:textColor="#FFFFFF"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnDeletePlan"
        android:layout_width="50dp"
        android:layout_height="27dp"
        android:background="@drawable/btn_delete"
        android:text="DELETE"
        android:textColor="#FFFFFF"
        android:layout_toLeftOf="@id/btnEditPlan"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"/>
</RelativeLayout>
